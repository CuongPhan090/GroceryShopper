<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.groceryshopper">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GroceryShopper">
        <activity android:name=".view.CategoryActivity" android:label="Category" />
        <activity android:name=".view.RegisterActivity" android:label="Register" />
        <activity android:name=".view.LoginActivity" android:label="Login" />
        <activity android:name=".view.MainActivity" android:label="Welcome to Grocery Shopper">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>